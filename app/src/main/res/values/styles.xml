<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryLight</item>
        <item name="android:colorSecondary">@color/secondary</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="android:colorError">@color/error</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="colorOnSecondary">@color/onSecondary</item>
        <item name="colorOnBackground">@color/onBackground</item>
        <item name="colorOnSurface">@color/onSurface</item>
        <item name="colorOnError">@color/onError</item>

        <item name="android:colorPrimaryDark">@color/primaryDark</item>
    </style>

    <style name="style_card_view_rounded_corners" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/custom_round_corners</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="rippleColor">@color/primaryLight</item>
    </style>

    <style name="style_card_view_rounded_bottom_corners" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/custom_bottom_round_corners</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="rippleColor">@color/primaryLight</item>
    </style>

    <style name="custom_round_corners" parent="Theme.MaterialComponents.DayNight">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">40dp</item>
        <item name="cornerSizeTopLeft">40dp</item>
        <item name="cornerSizeBottomRight">40dp</item>
        <item name="cornerSizeBottomLeft">40dp</item>
    </style>

    <style name="custom_bottom_round_corners" parent="Theme.MaterialComponents.DayNight">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">40dp</item>
        <item name="cornerSizeBottomLeft">40dp</item>
    </style>

    <style name="movie_header" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/design_default_color_on_primary</item>
        <item name="android:textSize">12sp</item>
    </style>


</resources>
