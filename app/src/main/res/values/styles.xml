<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
    </style>

    <style name="movie_simple_tile" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="elevation">2dp</item>
        <item name="android:stateListAnimator">@animator/card_view_press_down_animator</item>
        <item name="rippleColor">@color/primaryVariant</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="Theme.MaterialComponents.DayNight">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">40dp</item>
        <item name="cornerSizeTopLeft">40dp</item>
        <item name="cornerSizeBottomRight">40dp</item>
        <item name="cornerSizeBottomLeft">40dp</item>
        <item name="cardElevation">8dp</item>
    </style>

    <style name="movie_header" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/design_default_color_on_primary</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
